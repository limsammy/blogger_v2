<div class="articles">
  <h1>All Articles</h1>
  <ul class="collection" id="articles">
    <% @articles.each do |article| %>
        <li class="collection-item">
          <%= link_to article.title, article_path(article) %>
        </li>
    <% end %>
  </ul>
</div>

<div class="new">
    <%= link_to "Create a New Article", new_article_path, class: "waves-light btn" %>
</div>
