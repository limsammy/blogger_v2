<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<div class="comment_title">
  <h3>Comments (<%= @article.comments.size %>)</h3>
</div>
<div class="comments">
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>
</div>

<%= render partial: 'comments/form' %>

<%= link_to "<< Back to Articles List", articles_path, class: "waves-light btn" %>
<%= link_to "delete", @article, method: 'delete',
                                              class: "waves-light btn",
                                              data: {confirm: "Really delete the article?"} %>
<%= link_to "edit", edit_article_path(@article), class: "waves-light btn" %>
